{
    "dependencies": {
        "concurrency": "^0.1.4"
    },
    "scripts": {
        "build:frontend": "cd ./frontend && yarn build",
        "build:backend": "cd ./backend && yarn build",
        "frontend": "cd ./frontend && yarn start",
        "backend": "cd ./backend && yarn start",
        "start": "NODE_ENV=production concurrently \"yarn frontend \" \"yarn backend \"",
        "heroku-postbuild": "concurrently \"yarn build:frontend\" \"yarn build:backend \""
    }
}
